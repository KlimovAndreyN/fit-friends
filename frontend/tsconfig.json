{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    /*
       Compile RDO and DTO classes from backend,
       may be needed '@nestjs/swagger' and 'class-transformer' in devDependencies,
       else mast added interafces
    */
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    /**/
    "paths": {
      "@backend/shared/interafces/dto": [
        "../backend/libs/shared/core/src/lib/interfaces/dto/index.ts"
      ]
    }
  },
  "include": [
    "src",
    "vite.config.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}